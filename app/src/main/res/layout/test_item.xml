<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30px">

        <com.example.administrator.dimine_yizhang.CircularImage
            android:id="@+id/test_headimage"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_marginRight="20px">

        </com.example.administrator.dimine_yizhang.CircularImage>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nameTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="admin"
                    android:textColor="@color/fulltext"
                    android:textSize="15sp" />

            </LinearLayout>

            <mine.ExpandTextView
                android:id="@+id/contentTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                app:showLines="4">

            </mine.ExpandTextView>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/test_item_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

            </android.support.v7.widget.RecyclerView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/timeTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="66666666666"
                    android:textColor="@color/gray_deep"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/deleteBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:paddingLeft="6px"
                    android:paddingRight="6px"
                    android:text="删除"
                    android:textColor="@color/fulltext"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <View
                    android:layout_width="0dip"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <!--<ImageView-->
                <!--android:id="@+id/snsBtn"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:src="@drawable/im_snsimg" />-->


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/zan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/nozan" />

                <TextView
                    android:id="@+id/zan_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20px"
                    android:text="0" />

                <ImageView
                    android:id="@+id/comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:background="@drawable/plimg" />

                <TextView
                    android:id="@+id/comment_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:text="0" />
            </LinearLayout>


            <!--<LinearLayout-->
            <!--android:id="@+id/digCommentBody"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:background="@drawable/im_distribute_comm_bg"-->
            <!--android:minHeight="20px"-->
            <!--android:orientation="vertical"-->
            <!--android:padding="20px">-->

            <!--<mine.FavortText-->
            <!--android:id="@+id/favort_tv"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--/>-->

            <!--<ImageView-->
            <!--android:id="@+id/test_item_digline"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1px"-->
            <!--android:background="@color/gray_deep" />-->

            <!--</LinearLayout>-->


        </LinearLayout>

    </LinearLayout>


</LinearLayout>
