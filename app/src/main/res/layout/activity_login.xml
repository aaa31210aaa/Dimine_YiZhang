<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.dimine_yizhang.Login">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="50px"
        android:layout_marginTop="260px"
        android:text="安全生产执法管理"
        android:textSize="@dimen/TitleSize" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true">

        <EditText
            android:id="@+id/login_account_etv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/editext_login"
            android:hint="请输入"
            android:maxLength="20"
            android:paddingBottom="40px"
            android:paddingLeft="230px"
            android:paddingTop="40px"
            android:singleLine="true"
            android:text=""
            android:textSize="@dimen/SubText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="100px"
            android:text="账号"
            android:textColor="@color/black" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/login_account_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/editext_login"
            android:hint="请输入"
            android:inputType="textPassword"
            android:maxLength="20"
            android:paddingBottom="40px"
            android:paddingLeft="230px"
            android:paddingTop="40px"
            android:singleLine="true"
            android:text=""
            android:textSize="@dimen/SubText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="100px"
            android:text="密码"
            android:textColor="@color/black" />
    </RelativeLayout>

    <Button
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="50px"
        android:background="@drawable/login_btn_style"
        android:text="登录"
        android:textColor="@color/white" />

    <CheckBox
        android:id="@+id/login_save_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="50px"
        android:text="记住账号" />

</LinearLayout>
