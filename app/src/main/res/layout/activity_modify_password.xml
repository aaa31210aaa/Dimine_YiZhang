<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="mine.ModifyPassword">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout style="@style/TitleHeightOrange">

            <ImageView
                android:id="@+id/modify_password_back"
                style="@style/MyBack" />

            <TextView
                style="@style/MyTitleText"
                android:text="修改密码" />


        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50px"
            android:layout_marginTop="50px"
            android:text="旧密码"
            android:textColor="@color/yellow_orange" />

        <EditText
            android:id="@+id/modify_password_old_etv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="40px"
            android:background="@drawable/editext_yb"
            android:hint="请输入当前密码"
            android:padding="20px"
            android:textColorHint="@color/gray_deep" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50px"
            android:text="新密码"
            android:textColor="@color/yellow_orange" />

        <EditText
            android:id="@+id/modify_password_new_etv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="40px"
            android:background="@drawable/editext_yb"
            android:hint="请输入新密码"
            android:inputType="textPassword"
            android:padding="20px"
            android:textColorHint="@color/gray_deep" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50px"
            android:text="确认密码"
            android:textColor="@color/yellow_orange" />

        <EditText
            android:id="@+id/modify_password_again_etv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="40px"
            android:inputType="textPassword"
            android:background="@drawable/editext_yb"
            android:hint="请确认新密码"
            android:padding="20px"
            android:textColorHint="@color/gray_deep" />


        <Button
            android:id="@+id/modify_password_submit_btn"
            android:layout_width="300px"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/modify_password_btn"
            android:text="提交"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>
