<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_qian"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="home.HomePl">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        style="@style/TitleHeightOrange">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:text="发表评论"
            android:textSize="@dimen/MainText" />

        <ImageView
            android:id="@+id/home_pl_back"
            style="@style/MyBack" />

        <TextView
            android:id="@+id/home_pl_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/marginright"
            android:text="确定"
            android:textColor="@color/white" />

    </RelativeLayout>

    <EditText
        android:id="@+id/home_pl_etv"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:gravity="top|left"
        android:hint="请填写评论"
        android:padding="10dp"
        android:text=""
        android:textColorHint="@color/gray_deep" />

</LinearLayout>
