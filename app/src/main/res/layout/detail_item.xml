<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30px">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20px"
            android:gravity="center"
            android:orientation="vertical">

        <com.example.administrator.dimine_yizhang.CircularImage
            android:id="@+id/test_headimage"
            android:layout_width="100px"
            android:layout_height="100px">

        </com.example.administrator.dimine_yizhang.CircularImage>
            <TextView
                android:id="@+id/nameTv"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="admin"
                android:textColor="@color/fulltext"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/titleTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_centerVertical="true"
                    android:text="title"
                    android:textSize="17sp" />

                <ImageView android:id="@+id/care"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/service_star_normal"/>

            </RelativeLayout>

            <mine.ExpandTextView
                android:id="@+id/contentTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                app:showLines="4">

            </mine.ExpandTextView>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/test_item_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

            </android.support.v7.widget.RecyclerView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/timeTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="66666666666"
                    android:textColor="@color/gray_deep"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/deleteBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:paddingLeft="6px"
                    android:paddingRight="6px"
                    android:text="删除"
                    android:textColor="@color/fulltext"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <View
                    android:layout_width="0dip"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <!--<ImageView-->
                <!--android:id="@+id/snsBtn"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:src="@drawable/im_snsimg" />-->


            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/zan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/nozan" />

                <TextView
                    android:id="@+id/zan_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="asdf, aerqw, qwepij, wepri, sadfpw, sd, sdpiawpe, spdijw, spfaiw, asdf, aerqw, qwepij, wepri, sadfpw, sd, sdpiawpe, spdijw, spfaiw"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/comment"
                    android:layout_toRightOf="@id/zan" />

                <ImageView
                    android:id="@+id/comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/im_snsimg" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
