<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabTextColor">@color/tabtv_unselect</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabSelectedTextColor">@color/yellow_orange</item>
    </style>

    <style name="TitleHeight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">130px</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="MyTitleHeight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">130px</item>
        <item name="android:background">@color/yellow_orange</item>
    </style>


    <style name="TitleHeightOrange">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">130px</item>
        <item name="android:background">@color/yellow_orange</item>
    </style>

    <declare-styleable name="StarView">
        <attr name="mImageWidth" format="dimension" />
        <attr name="mImageHeight" format="dimension" />
        <attr name="mDefaultImageId" format="reference" />
        <attr name="mClickImageId" format="reference" />
        <attr name="mMargin" format="dimension" />
        <attr name="mStarNum" format="integer" />
        <attr name="mStarChoose" format="integer" />
    </declare-styleable>

    <!--照片选择页面样式-->
    <style name="PhotoPickerTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/photopicker_background</item>
        <item name="actionMenuTextAppearance">@style/ActionMenuTextStyle</item>
        <!--<item name="actionBarTheme">@style/actionBarTheme</item>-->
        <!--<item name="actionBarPopupTheme">@style/actionBarPopupTheme</item>-->
    </style>

    <!-- 设置ActionBar菜单字体 -->
    <style name="ActionMenuTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textSize">@dimen/action_text_size</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="pop_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/pop_exit_anim</item>
    </style>

    <!--加载窗口的样式-->
    <style name="MyDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!--返回箭头样式-->
    <style name="MyBack">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">20px</item>
        <item name="android:background">@drawable/back_white</item>
    </style>

    <!--Tilte标题-->
    <style name="MyTitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/SubTitleSize</item>

    </style>


    <style name="MatchWrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="QyXxTv">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">10px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/editext_yb</item>
        <item name="android:layout_margin">5px</item>
        <item name="android:gravity">center</item>

    </style>

    <!--用户选择照片的dialog-->
    <style name="my_dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="dialogstyle" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="@android:windowExitAnimation">@anim/dialog_exit</item>
    </style>


    <style name="SgxqLL">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">10px</item>
        <item name="android:paddingTop">10px</item>
    </style>


    <style name="SgxqTitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginRight">10px</item>
        <item name="android:layout_weight">0.3</item>
        <item name="android:background">@drawable/editext_yb</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">10px</item>
        <item name="android:paddingTop">10px</item>
    </style>

    <style name="SgxqContent">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">10px</item>
        <item name="android:layout_weight">0.7</item>
        <item name="android:background">@drawable/editext_yb</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">10px</item>
        <item name="android:paddingTop">10px</item>
        <item name="android:paddingLeft">10px</item>
        <item name="android:paddingRight">10px</item>
    </style>


    <style name="AddTypeTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.3</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">30px</item>
        <item name="android:paddingBottom">30px</item>
    </style>

    <style name="AddTypeEditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.7</item>
        <item name="android:layout_margin">10px</item>
        <item name="android:background">@drawable/editext_yb</item>
        <item name="android:padding">10px</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/MainText</item>
        <item name="android:textColorHint">@color/gray_deep</item>
    </style>


    <style name="AddImage">
        <item name="android:layout_width">70px</item>
        <item name="android:layout_height">70px</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">20px</item>
        <item name="android:background">@drawable/add</item>
    </style>

</resources>
